# ============================================
# Django Settings
# ============================================
SECRET_KEY=your-django-secret-key-change-in-production-use-python-manage-py-shell-to-generate
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost

# ============================================
# Database Configuration
# ============================================
# Leave empty to use SQLite (development default)
# For PostgreSQL (production), use format:
# postgresql://username:password@host:port/database_name
DATABASE_URL=

# ============================================
# Email Configuration (Gmail SMTP)
# ============================================
# For Gmail, you need to generate an "App Password"
# Go to: Google Account > Security > 2-Step Verification > App Passwords
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-character-app-password

# ============================================
# Google OAuth 2.0 Configuration
# ============================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH2_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH2_CLIENT_SECRET=your-client-secret
GOOGLE_OAUTH2_REDIRECT_URI=http://127.0.0.1:8000/api/auth/google/callback/

# ============================================
# Payment Gateway (Razorpay)
# ============================================
# Get credentials from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# ============================================
# File Storage Configuration
# ============================================
# Choose your storage backend
USE_SUPABASE=False

# --- Cloudinary Configuration ---
# Get credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# --- Supabase Storage Configuration ---
# Get credentials from: https://app.supabase.com/project/_/settings/api
# Only needed if USE_SUPABASE=True
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-or-service-key
SUPABASE_BUCKET_NAME=your-bucket-name

# --- AWS S3 Configuration (Alternative) ---
# Get credentials from: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# ============================================
# Redis Configuration (for Django Channels)
# ============================================
# Default: redis://127.0.0.1:6379
# For production with password: redis://:password@host:port/db
REDIS_URL=redis://127.0.0.1:6379

# ============================================
# Render Deployment (Production Only)
# ============================================
# This is automatically set by Render
RENDER_EXTERNAL_HOSTNAME=
